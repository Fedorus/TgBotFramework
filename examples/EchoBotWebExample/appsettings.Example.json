{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        },
        "File": {
            "BasePath": "Logs",
            "FileAccessMode": "KeepOpenAndAutoFlush",
            "FileEncodingName": "utf-8",
            "DateFormat": "yyyyMMdd",
            "CounterFormat": "000",
            "MaxFileSize": 10485760,
            "IncludeScopes": true,
            "MaxQueueSize": 100,
            "Files": [
                {
                    "Path": "bot-<counter>.log"
                }
            ]
        }
    },
    "EchoBot": {
        "Username": "someBot",
        "ApiToken": "1234567890:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
    }
}